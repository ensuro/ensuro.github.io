    const swiperPartners = new Swiper('.swiper-partners', {
      // Optional parameters
      slidesPerView: qty,
      spaceBetween: 25,
      loop: true,

      // If we need pagination
      pagination: {
      el: '.swiper-pagination',
      },

      // Navigation arrows
      navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
      },

      // And if we need scrollbar
      scrollbar: {
      el: '.swiper-scrollbar',
      },
    });
  </script>
  <hr class="h-28 xl:h-36 border-none">
